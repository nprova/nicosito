---
import Layout from "@layouts/Default.astro";
import RecentBlogPosts from "@components/generic/RecentBlogPosts.astro";
import MobileSocials from "@components/home/MobileSocials.astro";
import { Pill } from "@eliancodes/brutal-ui";
import { Button } from "@eliancodes/brutal-ui";
import { Card } from "@eliancodes/brutal-ui";

const builtWith = [
  { name: "Chi sono", url: "/aboutme/" },
  { name: "Progetti" },
  { name: "Sito", url: "https://ncxstudio.com" },
  {
    name: "Investimenti",
    url: "https://pacific-mango-919.notion.site/2ff940c9b04f4a7ab662bcfebe004920?v=7ab2c6bc1qk55vk7wjgzg3pmxlh59rv5dlgewd9jem5nrt4w&pvs=4",
  },
  {
    name: "La mia playlist",
    url: "https://open.spotify.com/playlist/4cfZbf3bkW6vwHNBieJYIl?si=c2c3afabd26e4b1d",
  },
];
---

<Layout
  title="Home"
  pageTitle="Blog | Home"
  description="Brutal is a minimalistic, neobrutalism theme for Astro."
>
  <main class="bg-pink-2 p-6">
    <MobileSocials />
    <section id="about" class="grid md:grid-cols-8 gap-8 mt-4">
      <h2 class="hidden">About Brutal</h2>
      <div class="col-span-4">
        <Card>
          <div class="flex flex-col justify-between items-start gap-4">
            <p class="mt-4 outfit text-2xl md:text-5xl lg:text-7xl">
              Inizia qui
            </p>
            <p class="mt-2 outfit text-xl md:text-3xl lg:text-5xl">
              Spazio personale in cui racchiudere pensieri e visioni del mondo.
            </p>
            <Button target={"_self"} href="/blog/">Vai al blog &rarr;</Button>
          </div>
        </Card>
      </div>
      <div class="col-span-2">
        <Card>
          <h2 class="text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif">
            Di cosa mi occupo
          </h2>
          <ul class="flex gap-4 flex-wrap">
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class="sanchez"
                      href={item.url}
                      target="_blank"
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class="col-span-2">
        <Card>
          <h2 class="text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif">
            Chi sono?
          </h2>
          <p class="poppins">
            Sono un ragazzo di 25 anni con diverse passioni.
          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
